<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/war">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FDFDFD"
        android:text="Team Death Match"
        android:textAlignment="center"
        android:textSize="35dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/team_a"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#009688"
            android:text="Team 1 points"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/team_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/team_a"
            android:background="#F44336"
            android:gravity="center"
            android:text="Team 2 points"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/score_team_a"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/team_a"
            android:background="#009688"
            android:text="0"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/score_team_b"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/team_b"
            android:layout_toRightOf="@id/score_team_a"
            android:background="#F44336"
            android:text="0"
            android:textAlignment="center"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_3_a"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/score_team_a"
            android:layout_margin="10dp"
            android:background="#009688"
            android:gravity="center"
            android:onClick="point_3_a"
            android:text="Head shot kills" />

        <Button
            android:id="@+id/button_2_a"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_3_a"
            android:layout_margin="10dp"
            android:background="#009688"
            android:gravity="center"
            android:onClick="point_2_a"
            android:text="lethal kills" />

        <Button
            android:id="@+id/button_1_a"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_2_a"
            android:layout_margin="10dp"
            android:background="#009688"
            android:gravity="center"
            android:onClick="point_1_a"
            android:text="normal kill" />


        <Button
            android:id="@+id/button_5_a"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_1_a"
            android:layout_margin="10dp"
            android:background="#009688"
            android:gravity="center"
            android:onClick="point_4_a"
            android:text="team kill" />

        <Button
            android:id="@+id/button_6_a"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_5_a"
            android:layout_margin="10dp"
            android:background="#009688"
            android:gravity="center"
            android:onClick="point_5_a"
            android:text="cross map kill" />


        <Button
            android:id="@+id/button_3_b"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/score_team_b"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/button_3_a"
            android:background="#F44336"
            android:gravity="center"
            android:onClick="point_3_b"
            android:text="Head shot kills" />

        <Button
            android:id="@+id/button_2_b"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_3_b"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/button_2_a"
            android:background="#F44336"
            android:gravity="center"
            android:onClick="point_2_b"
            android:text="lethal kills" />

        <Button
            android:id="@+id/button_1_b"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_2_b"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/button_1_a"
            android:background="#F44336"
            android:gravity="center"
            android:onClick="point_1_b"
            android:text="normal kill" />

        <Button
            android:id="@+id/button_5_b"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_1_b"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/button_5_a"
            android:background="#F44336"
            android:gravity="center"
            android:onClick="point_4_b"
            android:text="team kill" />

        <Button
            android:id="@+id/button_6_b"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_5_b"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/button_5_a"
            android:background="#F44336"
            android:gravity="center"
            android:onClick="point_5_b"
            android:text="cross map kill" />


    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:background="#F8F7F7"
        android:onClick="reset"
        android:text="Reset" />
</LinearLayout>